@import url('https://fonts.googleapis.com/css?family=Roboto:100,100i,300,400,700')

body
	margin 0
	font-size 16px
	font-family 'Roboto', sans-serif;
img
	max-width 100%
	max-height 100%
.menu
	position absolute
	top 0
	width 100%
	height 125px
	padding 0 60px
	box-sizing border-box
	display flex
	justify-content space-between
	align-items center
	transition-duration 0.21s
	z-index 3
	&__logo
		padding 7px
		cursor pointer
		transition-duration 0.21s
		img
			height 50px
		&:hover
			opacity 0.75
	&__buttons
		height 100%
		display flex
		justify-content center
		align-items center
	&__button
		margin 0 25px
		padding 7px 7px
		color white
		text-align center
		display flex
		flex-direction column
		justify-content center
		align-items center
		transition-duration 0.21s
		&:hover
			opacity 0.75
			cursor pointer

.header
	position relative
	width 100%
	height 600px
	box-sizing border-box
	display flex
	align-items center
	justify-content center
	text-align left
	&__content
		width 100%
		margin-top 80px
		padding 20px 8%
		color white
		transition-duration 0.18s
		line-height 0.82em
		z-index 2
		h1
			font-size 72px
			font-weight 400
		h2
			margin-left 7px
			font-size 21px
			font-weight 100
			font-style italic
	&__image
		overflow hidden
		position absolute
		height 100%
		width 100%
		background url('../../images/header.jpg') center no-repeat
		background-size auto auto
		background-size 1700px 1000px
	&__check
		position absolute
		bottom -35px
		height 70px
		width 70px
		background url('../../images/icons/check.png') center 100% / 100% no-repeat
		z-index 3

.containers
	width 100%
	display grid
	grid-template 1fr / 1fr
	&__container
		display flex
		justify-content space-between
		align-items center
		box-sizing border-box
		padding 80px 8%
		&:nth-child(even)
			background #f1f1f1c8
	&__content
		max-width 400px
		text-align right
		h1
			font-size 34px
			font-weight 400
			margin 7px 0
			color #01091a
		h2
			font-size 19px
			font-weight 300
			color rgba(0, 0, 0, 0.7)
		&:nth-child(odd)
			text-align left

section
	width 100%
	height 320px
	background #083395
	color white
	font-size 38px
	font-weight 400
	display flex
	justify-content center
	align-items center

@media screen and (max-width: 550px)
	.menu
		justify-content center
	.menu__logo
		display none
	.header__content
		font-size 2.5em
@media screen and (max-width: 410px)
	.menu
		font-size 0.8em
@media screen and (max-width: 380px)
	.menu
		display none