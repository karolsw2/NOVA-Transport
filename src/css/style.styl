@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700")

body
	margin 0
	font-size 15px
	font-family 'Open Sans', sans-serif

img
	max-width 100%
	max-height 100%

.menu
	width 100%
	height 85px
	padding 0 7px
	box-sizing border-box
	background rgba(0, 0, 0, 0.023)
	display flex
	justify-content space-between
	align-items center
	transition-duration 0.18s
	&__logo
		padding 7px
		cursor pointer
		transition-duration 0.18s
		img
			height 50px
		&:hover
			opacity 0.75
			padding-top 11px
	&__buttons
		height 100%
		display flex
		justify-content center
		align-items center
	&__button
		margin 0 25px
		padding 7px 7px
		color rgba(0, 0, 0, 0.9)
		text-align center
		display flex
		flex-direction column
		justify-content center
		align-items center
		transition-duration 0.18s
		&:hover
			padding-top 11px
			opacity 0.75
			cursor pointer

@media screen and (max-width: 550px)
	.menu
		justify-content center
	.menu__logo
		display none
@media screen and (max-width: 410px)
	.menu
		font-size 0.8em
@media screen and (max-width: 380px)
	.menu
		display none